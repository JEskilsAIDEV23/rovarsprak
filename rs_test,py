from rovarsprak import rovare

fil_r = input('Ange en text fil: ')
prefix = input('Ange prefix eller använd default ("rs_"  = enter) för krypterad fil: ')
frc = input('Ange hur noga icke svenska bokstäver granskas 0.00 - 1.00, default (0.50 = enter): ')

if prefix == "":
    prefix = 'rs_'

try:
    frc = float(frc)
    if frc > 1.0:
        frc = 1.0
    if frc < 0:
        frc = 0
    else:
        frc = frc

except:
    frc = 0.50

print(f'frc {frc} används')
print(f'prefix "{prefix}"')
rsprak = rovare(fil_r, prefix, frc)

val = input('Vill du granska den krypterade texten på skärmen: Ja (J) eller N (enter):')
if val == "J" or val == "j":
    print('\n_________\n'+rsprak)

else:
    exit()